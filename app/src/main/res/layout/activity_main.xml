<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".MainActivity"
        >

        <Button
            android:id="@+id/show_activity_anim1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Default"
            app:layout_constraintBottom_toTopOf="@id/show_activity_anim2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <Button
            android:id="@+id/show_activity_anim2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fade"
            app:layout_constraintBottom_toTopOf="@id/show_activity_anim3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/show_activity_anim1"
            />

        <Button
            android:id="@+id/show_activity_anim3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Slide"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/show_activity_anim2"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
